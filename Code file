class flashcard:
    def init(self, word, meaning):
        self.word = word
        self.meaning = meaning
    def str(self):
        
        #I will return a string here
        #keep looking if this is the right way to start
        return self.word+' ( '+self.meaning+' )'
#welcome screen         
flash = []
print("welcome to flashcard app")
#user input area  
#the following loop will be repeated until
#user stops to add the flashcards
while(True):
    word = input("enter term you want to add to flashcard : ")
    meaning = input("enter the definition of the term : ")
      
    flash.append(flashcard(word, meaning))
    option = int(input("enter 0 , if you want to add another flashcard : "))
      

